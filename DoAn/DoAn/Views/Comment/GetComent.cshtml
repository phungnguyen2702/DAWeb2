@using DoAn.Models;
@using DoAn.Helper
@model IList<DoAn.Models.Comment>

<div class="row" style="padding-top:10px;">
   <div id="containcmt">
       @foreach (var item in Model)
       {
           <div class="col-md-12 text-left">
               <label style="color:navy;">@item.User.f_Name</label>:&nbsp;@item.Comment1
           </div>
       }
   </div>
    @if (UserContext.isLogin())
    {
        <form method="post" action="@Url.Action("GetComent", "Comment")" id="frmCmt">
            <div class="col-md-12">
                <div class="form-group">
                    <textarea rows="5" class="form-control" placeholder="Viết Bình Luận"
                              style="height:45px;" name="cmt" id="cmt"></textarea>
                </div>
            </div>
            <div class="col-md-12">
                <input type="hidden" value="@ViewBag.id" name="id" id="idP"/>
                <button class="btn btn-info btn-round mystyleA" type="submit">
                    <span class="fa fa-bookmark"></span>
                    <b> &nbsp;Đăng</b>
                </button>
            </div>
        </form>
    }
    else
    {
        <div class="col-md-12 text-info">
            Hãy <a href="@Url.Action("Login","Header")" class="text-danger">Đăng Nhập</a> Để Bình Luận
        </div>
    }
</div>
<script src="~/Scripts/jquery-3.1.1.min.js" type="text/javascript"></script>
<script src="~/Content/Rerister/js/jquery.validate.min.js"></script>
<script type="text/javascript">
    $('#frmCmt').validate({
        rules: {
            cmt: {
                required: true,
                minlength: 6
            },

        },
        messages: {
            cmt: {
                required: "Hãy Viết Bình Luận",
                minlength:"Bình Luận Quá Ngắn"
            },
        }
    });
    $('#frmCmt').submit(function (e) {
        e.preventDefault();
        $.ajax({
            type: 'POST',
            url: '/Comment/GetComent',
            datatype: 'json',
            data: { id: $('#idP').val(), cmt:$('#cmt').val() },
            success: function (data) {
                var curHtml = $('#containcmt').html();
                addhtml = '<div class="col-md-12 text-left"><label style="color:navy;">'+ data + 
                    '</label>:&nbsp;' + $('#cmt').val() + '</div>';
                curHtml += addhtml;
                $('#containcmt').html(curHtml);
                cmt: $('#cmt').val('');
            },
            error: function (data) {
                ///alert("failse");
            },
        });
    });
</script>
