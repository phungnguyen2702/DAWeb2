@using DoAn.Helper
@model IList<DoAn.Models.Product>

@section css{
    <link href="~/Content/lightbox2/css/lightbox.min.css" rel="stylesheet" />
    <link href="~/Content/material-kit.css" rel="stylesheet" />
    <style type="text/css">
        .mystyleA {
            background-color: deepskyblue !important;
            color: white !important;
        }

            .mystyleA:hover {
                box-shadow: 0px 14px 26px -12px rgba(0,188,212,0.42), 0px 4px 23px 0px rgba(0,0,0,0.12), 0px 8px 10px -5px rgba(0,188,212,0.2) !important;
            }

        .mystyleAP {
            background-color: mediumblue !important;
            color: white !important;
        }

            .mystyleAP:hover {
                box-shadow: 0px 14px 26px -12px rgba(0,188,212,0.42), 0px 4px 23px 0px rgba(0,0,0,0.12), 0px 8px 10px -5px rgba(0,188,212,0.2) !important;
            }
    </style>
}

@section js{
    <script src="~/Content/lightbox2/js/lightbox.min.js"></script>
    <script type="text/javascript">
        $('.addItemCard').on('click', function () {
            var ProID = $(this).data('id');
            $('#txtIdProduct').val(ProID);
            $('#AddToCart').submit();
        });

        function btnclick() {
            if ($("#divNew").is(':hidden')) {
                $('#divNew').show();
                $(this).attr("title", 'Ẩn Đanh Sách');
            }
            else {
                $('#divNew').hide();
                $(this).attr("title", 'Hiện Đanh Sách');
            }
        }

        function btnclick2() {
            if ($("#divCat").is(':hidden')) {
                $('#divCat').show();
                $(this).attr("title", 'Ẩn Đanh Sách');
            }
            else {
                $('#divCat').hide();
                $(this).attr("title", 'Hiện Đanh Sách');
            }

        }
        function btnclick3() {
            if ($("#divView").is(':hidden')) {
                $('#divView').show();
                $(this).attr("title", 'Ẩn Đanh Sách');
            }
            else {
                $('#divView').hide();
                $(this).attr("title", 'Hiện Đanh Sách');
            }

        }
    </script>
}


<div class="panel panel-primary">
    @*<div class="panel-heading">
            <h3 class="panel-title text-center">Danh sách sản phẩm</h3>
        </div>*@
    <div class="panel-body" style="padding-top:unset;padding-bottom:unset">
        <div class="row">
            @if (Model.Count() == 0)
            {

                <div>
                    <div class="alert alert-info">
                        <div class="container">
                            <div class="alert-icon">
                                <i class="material-icons">info_outline</i>
                            </div>
                            <h4><b>Sản Phẩm Đang Được Cập Nhật</b></h4>
                        </div>
                    </div>
                </div>

            }
            else
            {
                <form method="post" id="AddToCart" action="@Url.Action("AddIndex","Cart")">
                    <input type="hidden" id="txtIdProduct" name="proId" value="" />
                    <input type="hidden" id="txtQuantity" name="quantity" value="1" />
                    <input type="hidden" id="txtQuantity" name="curpage" value="1" />
                </form>
                <div class="col-md-12" style="background-color:navy;color:white;font-size:18px;padding-top: 5px;padding-bottom: 5px;">
                    <a href="javascript:void;" onclick="btnclick();" style="color:white;" title="Ẩn Đanh Sách">
                        <i class="fa fa-bars" aria-hidden="true"></i>&nbsp; Sản Phẩm Mới
                    </a>
                </div>
                <div class="col-md-12" style="margin-top:10px;" id="divNew">
                    @for (int i = 0; i < 10; i++)                   
                    {
                    <div class="col-md-4 col-sm-6">
                        <div class="thumbnail">
                            <a href="~/Images/imgs/sp/@Model[i].ProID/main.jpg" data-lightbox="@Model[i].ProID" data-title="@Model[i].ProName">
                                <img src="~/Images/imgs/sp/@Model[i].ProID/main.jpg" alt="@Model[i].ProName"
                                     style="margin-top:20px !important;">
                            </a>
                            <div class="caption" style="margin:50px 0px 0px 0px !important;">
                                <h6 style="color:blueviolet;">@Model[i].ProName</h6>
                                <h6 style="color:mediumblue">@String.Format("{0:#,#} VNĐ", Model[i].Price)</h6>
                                <p style="height:150px;margin-bottom:0px !important;">
                                    @Html.Raw(Model[i].TinyDes)
                                </p>
                                <p>
                                    <a class="btn btn-info btn-round mystyleA" role="button"
                                       href="@Url.Action("Detail","Product",new { id = Model[i].ProID})">
                                        <span class="pe-7s-magic-wand"></span>
                                        <b> &nbsp;Chi Tiết</b>
                                    </a>
                                    @if (UserContext.isLogin() && Model[i].Quantity > 0)
                                    {
                                        <a href="javascript:;" class="btn btn-primary btn-round mystyleAP addItemCard" role="button"
                                           data-id="@Model[i].ProID">
                                            <b>
                                                <i class="fa fa-cart-plus">&nbsp;</i>
                                                Đặt Hàng
                                            </b>
                                        </a>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                    }
                </div>


                <div class="col-md-12" style="background-color:navy;color:white;font-size:18px;padding-top: 5px;padding-bottom: 5px; margin-top:10px;">
                    <a href="javascript:void;" onclick="btnclick2();" style="color:white;" title="Ẩn Đanh Sách">
                        <i class="fa fa-bars" aria-hidden="true"></i>&nbsp; Sản Phẩm Bán Chạy Nhất
                    </a>
                </div>
                <div class="col-md-12" style="margin-top:10px;" id="divCat">
                    @for (int i = 10; i < 20; i++)
                    {
                        <div class="col-md-4 col-sm-6">
                            <div class="thumbnail">
                                <a href="~/Images/imgs/sp/@Model[i].ProID/main.jpg" data-lightbox="@Model[i].ProID" data-title="@Model[i].ProName">
                                    <img src="~/Images/imgs/sp/@Model[i].ProID/main.jpg" alt="@Model[i].ProName"
                                         style="margin-top:20px !important;">
                                </a>
                                <div class="caption" style="margin:50px 0px 0px 0px !important;">
                                    <h6 style="color:blueviolet;">@Model[i].ProName</h6>
                                    <h6 style="color:mediumblue">@String.Format("{0:#,#} VNĐ", Model[i].Price)</h6>
                                    <p style="height:150px;margin-bottom:0px !important;">
                                        @Html.Raw(Model[i].TinyDes)
                                    </p>
                                    <p>
                                        <a class="btn btn-info btn-round mystyleA" role="button"
                                           href="@Url.Action("Detail","Product",new { id = Model[i].ProID})">
                                            <span class="pe-7s-magic-wand"></span>
                                            <b> &nbsp;Chi Tiết</b>
                                        </a>
                                        @if (UserContext.isLogin() && Model[i].Quantity > 0)
                                        {
                                            <a href="javascript:;" class="btn btn-primary btn-round mystyleAP addItemCard" role="button"
                                               data-id="@Model[i].ProID">
                                                <b>
                                                    <i class="fa fa-cart-plus">&nbsp;</i>
                                                    Đặt Hàng
                                                </b>
                                            </a>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="col-md-12" style="background-color:navy;color:white;font-size:18px;padding-top: 5px;padding-bottom: 5px; margin-top:10px;">
                    <a href="javascript:void;" onclick="btnclick3();" style="color:white;" title="Ẩn Đanh Sách">
                        <i class="fa fa-bars" aria-hidden="true"></i>&nbsp; Sản Phẩm Xem Nhiều Nhất
                    </a>
                </div>
                <div class="col-md-12" style="margin-top:10px;" id="divView">
                    @for (int i = 20; i < 30; i++)
                    {
                        <div class="col-md-4 col-sm-6">
                            <div class="thumbnail">
                                <a href="~/Images/imgs/sp/@Model[i].ProID/main.jpg" data-lightbox="@Model[i].ProID" data-title="@Model[i].ProName">
                                    <img src="~/Images/imgs/sp/@Model[i].ProID/main.jpg" alt="@Model[i].ProName"
                                         style="margin-top:20px !important;">
                                </a>
                                <div class="caption" style="margin:50px 0px 0px 0px !important;">
                                    <h6 style="color:blueviolet;">@Model[i].ProName</h6>
                                    <h6 style="color:mediumblue">@String.Format("{0:#,#} VNĐ", Model[i].Price)</h6>
                                    <p style="height:150px;margin-bottom:0px !important;">
                                        @Html.Raw(Model[i].TinyDes)
                                    </p>
                                    <p>
                                        <a class="btn btn-info btn-round mystyleA" role="button"
                                           href="@Url.Action("Detail","Product",new { id = Model[i].ProID})">
                                            <span class="pe-7s-magic-wand"></span>
                                            <b> &nbsp;Chi Tiết</b>
                                        </a>
                                        @if (UserContext.isLogin() && Model[i].Quantity > 0)
                                        {
                                            <a href="javascript:;" class="btn btn-primary btn-round mystyleAP addItemCard" role="button"
                                               data-id="@Model[i].ProID">
                                                <b>
                                                    <i class="fa fa-cart-plus">&nbsp;</i>
                                                    Đặt Hàng
                                                </b>
                                            </a>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
