
@{
    ViewBag.Title = "EditPassWord";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    <link href="~/Content/material-kit.css" rel="stylesheet" />
    <link href="~/Content/ButtonStyle.css" rel="stylesheet" />
    <link href="~/Content/Rerister/css/material-bootstrap-wizard.css" rel="stylesheet" />
    <style type="text/css">
        .panel-body {
            min-height: 600px;
        }
    </style>
}
@section js{
    <script src="~/Scripts/material.min.js"></script>
    <script src="~/Content/Rerister/js/jquery.bootstrap.js" type="text/javascript"></script>

    <!--  Plugin for the Wizard -->
    <script src="~/Content/Rerister/js/material-bootstrap-wizard.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script type="text/javascript">
        $('#frmPWE').validate({
            rules: {
                oldPW: {
                    required: true,
                },
                newPW: {
                    required: true,
                    minlength: 6
                },
                confirmPW: {
                    equalTo: "#newPW"
                },
            },
            messages: {
                oldPW: {
                    required: "Không được bỏ trống"
                },
                newPW: {
                    required: "Không được bỏ trống"
                },
                confirmPW: {
                    equalTo: "Nhập trùng với password ở trên"
                },
            }
        });
    </script>

}


<div class="panel panel-primary">
    <div class="panel-body" style="padding:10px">
        <div class="text-center center-block" style="background-color:azure; height:50px;">
            <label style="font-size:20px;color:blueviolet;line-height:50px;">
                Đổi Mật Khẩu
            </label>
        </div>

        @if (ViewBag.error!=null)
        {
            <div class="alert alert-warning">
                <div class="container-fluid">
                    <div class="alert-icon">
                        <i class="material-icons">warning</i>
                    </div>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true"><i class="material-icons">clear</i></span>
                    </button>
                    <b>@ViewBag.error</b> 
                </div>
            </div>
        }


        <form id="frmPWE" method="post">
            <div class="row">
                <div class="col-sm-4 col-sm-offset-4">
                    <div class="form-group label-floating">
                        <label class="control-label">PassWord Cũ</label>
                        <input type="password" class="form-control" name="oldPW">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4 col-sm-offset-4">
                    <div class="form-group label-floating">
                        <label class="control-label">PassWord Mới</label>
                        <input type="password" class="form-control" name="newPW" id="newPW">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4 col-sm-offset-4">
                    <div class="form-group label-floating">
                        <label class="control-label">Nhập Lại PassWord Mới</label>
                        <input type="password" class="form-control" name="confirmPW">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4 col-sm-offset-4">
                    <div class="form-group">
                        <input type='submit' class='btn btn-primary btn-round mystyleAP col-sm-5' value='Đổi' />
                        <a role="button" class='btn btn-info btn-round mystyleA col-sm-5'
                           href="@Url.Action("Index","Home")">Hủy</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>